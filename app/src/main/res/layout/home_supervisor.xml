<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg5"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_h"
        android:id="@+id/toolBar"
        android:background="@color/colorPrimary">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:background="@drawable/home"
android:id="@+id/back"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_text_button"
            android:text="home supervisor"
            android:fontFamily="casual"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18dp"
                android:id="@+id/logout"
                android:padding="10dp"

                android:background="@android:drawable/ic_lock_power_off" />
        </RelativeLayout>

    </Toolbar>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_logo_size"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        >

        <Button
            android:id="@+id/new_project_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/colorPrimary1"
            android:fontFamily="casual"
            android:text="add new project"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_text_view_big"
            android:textStyle="bold" />
        <Button
            android:id="@+id/add_student_project_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/colorPrimary1"
            android:fontFamily="casual"
            android:text="add student in project"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_text_view_big"
            android:textStyle="bold" />
        <Button
            android:id="@+id/all_project_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/colorPrimary1"
            android:fontFamily="casual"
            android:text="view projects"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_text_view_big"
            android:textStyle="bold" />
        <Button
            android:id="@+id/report_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/colorPrimary1"
            android:fontFamily="casual"
            android:text="send report "
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_text_view_big"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>
</ScrollView>