<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">
    />
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/n"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/contact_img"
                android:layout_height="@dimen/contact_img"
                android:id="@+id/img"
                android:layout_centerVertical="true"
                android:background="@drawable/contacts"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/name_layout"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:id="@+id/name_supervisor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="name supervisor"
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_text_view_big"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/img"
                android:layout_below="@+id/name_layout"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/id_supervisor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email "
                    android:fontFamily="casual"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_text_view_very_small"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/password_supervisor"
                    android:visibility="gone"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_contact_supervisor"
                    android:visibility="gone"/>
            </LinearLayout>

            <ImageButton
                android:layout_width="@dimen/icon_setting"
                android:layout_height="@dimen/icon_setting"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/setting"
                android:background="@drawable/ic_dots"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>